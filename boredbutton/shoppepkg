## shoppe package

# Basic information
pkgname="boredbutton"
pkgdesc="The ultimate anti-boredom utility"
pkgver="2.0.1"
pkgarch="all"
revision="1"
license="GPL 3-Clause"
website="https://github.com/knuxify/boredbutton"
depends="bash"
#optional="wget"
makedepends="make"
conflicts="boredbutton-git"
archdependent="false"

# Building/installation instructions
source="https://github.com/knuxify/boredbutton"
sourcetype="git-tag"
tag="$pkgver"
sha512sum="f3589e99620a55290c1a1b4c5cbc9fbecbcdd46cb5df42b65a66b181eba22bce4cc2f7be36feff389bbad7941a228dd017bf40fe6c0599fad13ecb61e5cea205  content.tar.gz"

shoppeinstall() {
	get_source
	mkdir content
	cd "source"
	DESTDIR=../content make install
}
