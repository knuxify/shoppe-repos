## shoppe package

# Basic information
pkgname="boredbutton"
pkgdesc="The ultimate anti-boredom utility"
pkgver="2.0.1"
pkgarch="all"
revision="1"
license="GPL 3-Clause"
website="https://github.com/knuxify/boredbutton"
depends="bash"
#optional="wget"
makedepends="make"
conflicts="boredbutton-git"

# Building/installation instructions
source="https://github.com/knuxify/boredbutton"
sourcetype="git-tag"
tag="$version"

shoppeinstall() {
	getpkg
	mkdir content
	cd "$name"
	DESTDIR=../content make install && success
}
