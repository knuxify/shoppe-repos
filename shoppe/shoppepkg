## shoppe package

# Basic information
pkgname="shoppe"
pkgdesc="A portable package manager that integrates with most distros"
pkgver="1.0.0"
pkgarch="all"
pkgrel="1"
license="MIT"
website="https://github.com/shoppepm/shoppe"
depends="bash"
optdepends="wget git"
makedepends="make"
conflicts="shoppe-git"
archdependent="false"

# Building/installation instructions
source="$website"
sourcetype="git"
#tag="$pkgver"

shoppepkg_build() {
	get_source
	cd $pkgname
	cp shoppe /usr/bin/
	chmod +x /usr/bin/shoppe
	mkdir -p /usr/share/doc/shoppe
	cp -r docs /usr/share/doc/shoppe
}
