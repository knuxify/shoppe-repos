## shoppe package

# Basic information
pkgname="whim"
pkgdesc="A portable package manager that integrates with most distros"
pkgver="1.0.0"
pkgarch="all"
pkgrel="1"
license="MIT"
website="https://github.com/whim-pm/whim"
depends="bash"
optdepends="wget git"
makedepends="make"
conflicts="whim-git"
archdependent="false"

# Building/installation instructions
source="$website"
sourcetype="git"
#tag="$pkgver"

whimpkg_build() {
	get_source
	cd $pkgname
	cp whim /usr/bin/
	chmod +x /usr/bin/whim
	mkdir -p /usr/share/doc/whim
	cp -r docs /usr/share/doc/whim
}
