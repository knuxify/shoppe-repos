## shoppe package

# Basic information
name="boredbutton-git"
desc="The ultimate anti-boredom utility"
version="rolling"
revision="rolling"
license="GPL 3-Clause"
website="https://github.com/knuxify/boredbutton"
depends="bash"
#optional="wget"
makedepends="make"
conflicts="boredbutton"
# Building/installation instructions
source="https://github.com/knuxify/boredbutton"
sourcetype="git"

shoppeinstall() {
	getpkg
	mkdir content
	cd "$name"
	DESTDIR=../content make install && success
}
