## shoppe package

# Basic information
name="neofetch-git"
desc="A CLI system information tool written in BASH that supports displaying images"
version="6.0.0"
revision="1"
license="GPL 3-Clause"
website="https://github.com/dylanaraps/neofetch"
depends="bash"
#optional="wget"
makedepends="make"
conflicts="neofetch"

# Building/installation instructions
source="https://github.com/dylanaraps/neofetch"
sourcetype="git"

shoppeinstall() {
	getpkg
	mkdir content
	cd "$name"
	DESTDIR=../content make install && success
}
